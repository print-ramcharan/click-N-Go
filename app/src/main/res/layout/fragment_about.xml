<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aboutFragmentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.about.AboutFragment">

    <TextView
        android:id="@+id/about_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textSize="24sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/about_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ClickNGo is an app designed to help users easily save and manage their favorite websites. By connecting to your Google account, it automatically syncs links across devices, allowing you to access them anywhere. The app provides a simple, organized interface for storing links, customizing your list, and browsing them later. Save and share your most visited sites with ease!"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/about_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_centerHorizontal="true"
        tools:text="ClickNGo helps you save and manage your favorite websites, syncing across devices using Google account."/>

    <TextView
        android:id="@+id/about_developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed by: \nPolabathina Ramcharan Teja"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/about_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/about_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/about_developer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/btn_developer_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visit Developer Website"
        app:layout_constraintTop_toBottomOf="@id/about_version"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>
